const englishToBengaliNumber = (engNumStr) => {
  const bnNumbers = ['০', '১', '২', '৩', '৪', '৫', '৬', '৭', '৮', '৯'];
  return engNumStr.toString().split('').map(char => {
    if (char >= '0' && char <= '9') return bnNumbers[parseInt(char)];
    return char;
  }).join('');
};

